<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/SettingsLinearLayout01"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical">
	<include layout="@layout/title_comp" android:id="@+id/TitleComp"
		android:layout_width="fill_parent" android:layout_height="wrap_content" />


	<ScrollView android:id="@+id/ScrollView01"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:scrollbars="none">
		<LinearLayout android:id="@+id/LinearLayout01"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:orientation="vertical" android:paddingLeft="5dp" android:paddingRight="5dp">

			<TextView android:id="@+id/NRFTextView005"
				android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:textColor="@color/descN" android:text="@string/STTV4"
				android:layout_marginTop="5dp" style="@style/mediumfont"></TextView>
			<com.riktamtech.android.ratethisstc.ui.components.CustDropDown
				android:id="@+id/NRFTextView1004" android:textColor="#ffffff"
				android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:background="@drawable/combo" style="@style/mediumfont"></com.riktamtech.android.ratethisstc.ui.components.CustDropDown>


			<TextView android:id="@+id/NRFTextView04"
				android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:textColor="@color/descN" android:layout_marginTop="2dp"
				android:text="@string/STTV6" style="@style/mediumfont"></TextView>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:id="@+id/NRFLinearLayout001"
				android:gravity="left">
				<com.riktamtech.android.ratethisstc.ui.components.CustDropDown
					android:layout_height="wrap_content" android:id="@+id/NRFTextView102"
					android:layout_gravity="left" android:layout_width="wrap_content"
					android:layout_weight="0.2" style="@style/mediumfont"></com.riktamtech.android.ratethisstc.ui.components.CustDropDown>
				<com.riktamtech.android.ratethisstc.ui.components.CustDropDown
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginLeft="10dp" android:id="@+id/NRFTextView103"
					android:layout_gravity="left" android:layout_weight="0.1"
					android:visibility="gone" style="@style/mediumfont"></com.riktamtech.android.ratethisstc.ui.components.CustDropDown>
				<com.riktamtech.android.ratethisstc.ui.components.CustDropDown
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:background="@drawable/combo_small"
					android:layout_marginLeft="10dp" android:id="@+id/NRFTextView1031"
					android:layout_gravity="left" android:layout_weight="0.1"
					android:visibility="gone" style="@style/mediumfont"></com.riktamtech.android.ratethisstc.ui.components.CustDropDown>
			</LinearLayout>
			<TextView android:id="@+id/NRFTextView05"
				android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:textColor="@color/descN" android:text="@string/STTV7"
				android:layout_marginTop="5dp" style="@style/mediumfont"></TextView>
			<com.riktamtech.android.ratethisstc.ui.components.CustDropDown
				android:id="@+id/NRFTextView104" android:textColor="#ffffff"
				android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:background="@drawable/combo" style="@style/mediumfont"></com.riktamtech.android.ratethisstc.ui.components.CustDropDown>

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textColor="@color/descN"
				android:text="@string/STTV8" android:id="@+id/TextView707" style="@style/mediumfont"></TextView>
			<com.riktamtech.android.ratethisstc.ui.components.CustDropDown
				android:layout_height="wrap_content" android:textColor="#ffffff"
				android:background="@drawable/combo" android:layout_width="fill_parent"
				android:id="@+id/TextView710" style="@style/mediumfont"></com.riktamtech.android.ratethisstc.ui.components.CustDropDown>
			<ImageButton android:id="@+id/ImageButton01"
				android:layout_height="wrap_content" android:background="#00000000"
				android:clickable="true" android:src="@drawable/filters_settings"
				android:layout_width="wrap_content" android:layout_marginTop="10dp"></ImageButton>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
